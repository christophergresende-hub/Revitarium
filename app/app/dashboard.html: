  <script>
    // Simple client-side "app.js" inline behavior (lightweight)
    (function(){
      const user = sessionStorage.getItem('revitarium_user') || 'Convidado';
      document.getElementById('usernameDisplay').textContent = user;
      document.getElementById('usersCount').textContent = Math.floor(120 + Math.random()*900);
      document.getElementById('sessionsCount').textContent = Math.floor(300 + Math.random()*1500);
      document.getElementById('perfScore').textContent = (80 + Math.random()*19).toFixed(0) + '%';

      function draw(id, values){
        const svg = document.getElementById(id);
        const w = 100, h = 30;
        const max = Math.max(...values);
        const min = Math.min(...values);
        const pts = values.map((v,i)=> {
          const x = (i/(values.length-1)) * w;
          const y = h - ((v - min) / (max - min || 1)) * h;
          return `${x},${y}`;
        }).join(' ');
        svg.innerHTML = '<polyline points="'+pts+'" fill="none" stroke="'+getComputedStyle(document.documentElement).getPropertyValue('--accent')+'" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />';
      }

      draw('spark1', Array.from({length:12}, ()=> Math.random()*100));
      draw('spark2', Array.from({length:12}, ()=> 30 + Math.random()*70));

      // status simulation
      ['statusApi','statusDb','statusQueue'].forEach(id=>{
        const el = document.getElementById(id);
        el.textContent = el.textContent + ' — OK';
      });

      document.getElementById('logoutBtn').addEventListener('click', ()=>{
        sessionStorage.removeItem('revitarium_user');
        location.href = 'login.html';
      });

    })();
  </script>
