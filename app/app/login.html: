    <h1 id="title">Revitarium</h1>

    <label class="field">
      <input id="username" type="text" inputmode="text" placeholder="Usuário (email ou nome)" aria-label="Usuário">
    </label>

    <label class="field">
      <input id="password" type="password" placeholder="Senha" aria-label="Senha">
    </label>

    <button id="loginBtn" class="btn" aria-live="polite">Entrar</button>

    <div class="small">Ao entrar você será direcionado ao Dashboard — interface profissional.</div>
  </main>

  <script>
    // login mínimo — redireciona para dashboard (mock)
    document.getElementById('loginBtn').addEventListener('click', function(){
      // validação simples
      const u = document.getElementById('username').value.trim();
      const p = document.getElementById('password').value.trim();
      if(!u || !p){
        alert('Informe usuário e senha.');
        return;
      }
      // simula autenticação: guarda um flag e redireciona
      localStorage.setItem('revitarium_user', u);
      window.location.href = 'dashboard.html';
    });
  </script>
